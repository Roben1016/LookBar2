<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_view_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/card_foreground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:minHeight="80dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_people_pic"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_people_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_people_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color_normal"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color_normal"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_people_type"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>